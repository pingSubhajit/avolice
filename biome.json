{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useBlockStatements": "error",
				"useConsistentArrayType": "error",
				"noInferrableTypes": "error"
			},
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"semicolons": "asNeeded",
			"bracketSpacing": false,
			"trailingCommas": "none"
		}
	},
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			".next",
			".turbo",
			".source",
			".git",
			".cache",
			"tmp",
			"coverage",
			"out",
			"*.min.js",
			"bun.lock"
		]
	}
}
